<project name="openjdk" default="build" basedir=".">

	<import file="base.xml"/>
        
	<property file="${components.file}"/>

	<property name="openjdk.version" value="1.0"/>
	<property name="openjdk.description" value="OpenJDK"/>

	<property name="openjdk.package.dir" value="${components.dir}/openjdk/${openjdk.version}"/>

	<target name="init-openjdk-properties" depends="prepare-ant-tasks">
	</target>

	<target name="fetch" depends="init-openjdk-properties">
<!--                <echo message="HELLO !!!111!!!1!!"/>
                <input>Press Return key to continue...</input>
              
                <echo message="${openjdk.package.dir}"/>
--> 
 		<mkdir dir="${openjdk.package.dir}"/>
		<writeComponentConstants dir="${openjdk.package.dir}"/>
	</target>

	<target name="build" depends="fetch">
	</target>

	<target name="ensure" depends="prepare-ant-tasks">
		<ensureUptodate name="openjdk" dir="${openjdk.package.dir}"/>
	</target>

</project>
